<Window x:Class="ProjectLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLearn"
        mc:Ignorable="d"
        Title="Школа" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" ></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Image Source="Resources\school_logo.png" Width="100" Height="100"></Image>
            <TextBlock VerticalAlignment="Center" Margin=" 30,0,0,0">Школа иностранных языков "Леарн"</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="1" >
            
            <Button Click="Button_Click">Перейти к просмотру услуг</Button>
        </StackPanel>

       
        <StackPanel Grid.Row="2" >
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
    </Grid>
</Window>
